<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.user.email %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><% if current_user == restaurant.user %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
        <% else %>
        <% end %>
        </td>
        <td><% if current_user == restaurant.user %>
        <%= link_to 'Destroy', destroy_restaurant_path(restaurant) %>
        <% else %>
        <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

